<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<extend>../../master/jsf-sun-tool.xml</extend>
	<name>sakai-presentation-tool</name>
	<groupId>sakaiproject</groupId>
	<id>sakai-presentation-tool</id>
	<currentVersion>${sakai.version}</currentVersion>
	<organization>
		<name>Sakai Project</name>
		<url>http://www.sakaiproject.org/</url>
	</organization>
	<inceptionYear>2005</inceptionYear>
	
	<properties>
		<deploy.type>war</deploy.type>
	</properties>
	
	<dependencies>
	
		<!-- to be able to use the Presentation Service APIs -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-presentation-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		
		<!-- for our OKI APIs -->
		<dependency>
			<groupId>OKI</groupId>
			<artifactId>OkiOSID</artifactId>
			<version>2.0</version>
			<url>http://sourceforge.net/projects/okiproject</url>
		</dependency>
		
		<dependency>
				<groupId>sakaiproject</groupId>
				<artifactId>sakai-util-api</artifactId>
				<version>${sakai.version}</version>
		</dependency>

		<dependency>
				<groupId>sakaiproject</groupId>
				<artifactId>sakai-tool-api</artifactId>
				<version>${sakai.version}</version>
		</dependency>

		<dependency>
				<groupId>sakaiproject</groupId>
				<artifactId>sakai-courier-api</artifactId>
				<version>${sakai.version}</version>
		</dependency>

		<dependency>
				<groupId>sakaiproject</groupId>
				<artifactId>sakai-courier-util</artifactId>
				<version>${sakai.version}</version>
				<properties>
					<war.bundle>true</war.bundle>
				</properties>
		</dependency>
		
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>        
		</dependency>

	</dependencies>
	
	<build>
	
		<!-- java source -->
		<sourceDirectory>src/java</sourceDirectory>
		
		<!-- other resources for the jar - the message bundles -->
		<resources>
			<resource>
				<directory>${basedir}/src/bundle</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>
	
	</build>

</project>
