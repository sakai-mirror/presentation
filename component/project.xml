<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<extend>../../master/project.xml</extend>
	<name>sakai-presentation-pack</name>
	<groupId>sakaiproject</groupId>
	<id>sakai-presentation-pack</id>
	<currentVersion>${sakai.version}</currentVersion>
	<organization>
		<name>Sakai Project</name>
		<url>http://www.sakaiproject.org/</url>
	</organization>
	<inceptionYear>2005</inceptionYear>

	<properties>
		<!-- deploy as a components -->
		<deploy.type>components</deploy.type>
	</properties>

	<dependencies>

		<!-- our plugin so we can run maven from this directory for testing -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai</artifactId>
			<version>${sakai.plugin.version}</version>
			<type>plugin</type>
		</dependency>

		<!-- Our jar of api implemenntations -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-presentation-impl</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

	</dependencies>

	<build>

		<sourceDirectory>src/java</sourceDirectory>

	</build>

</project>
