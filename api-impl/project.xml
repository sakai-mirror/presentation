<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<extend>../../master/project.xml</extend>
	<name>Presentation Component</name>
	<groupId>sakaiproject</groupId>
	<id>sakai-present-api-impl</id>
	<currentVersion>${sakai.version}</currentVersion>
	<organization>
		<name>Sakai Project</name>
		<url>http://www.sakaiproject.org/</url>
	</organization>
	<inceptionYear>2005</inceptionYear>

        <properties>
                <!-- build as a jar -->
                <deploy.type>jar</deploy.type>
        </properties>

	<dependencies>

                <!-- our maven plugin to allow us to run maven locally -->
                <dependency>
                        <groupId>sakaiproject</groupId>
                        <artifactId>sakai</artifactId>
                        <version>${sakai.plugin.version}</version>
                        <type>plugin</type>
                </dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-content-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-entity-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-tool-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>

		<!-- to be able to access the PresentationService interface.  -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-present-api</artifactId>
			<type>jar</type>
			<version>${sakai.version}</version>
		</dependency>

		<!-- Need the OSID APIs -->
                <dependency>
                        <groupId>OKI</groupId>
                        <artifactId>OkiOSID</artifactId>
                        <version>2.0</version>
                        <url>http://sourceforge.net/projects/okiproject</url>
                </dependency>

 	</dependencies>

	<build>

		<!-- java source -->
		<sourceDirectory>src/java</sourceDirectory>

		<!-- other resources for the jar - the message bundles -->
		<resources>
			<resource>
				<directory>${basedir}/src/bundle</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>
	
	</build>

</project>
